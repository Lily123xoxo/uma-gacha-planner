<!-- Heading and Search Bar Row -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Banner Timeline</h1>

  <!-- Search Bar -->
  <div class="d-flex align-items-center" style="width: 400px;">
    <input 
      type="text" 
      id="timeline-search" 
      class="form-control me-2" 
      placeholder="Search character..."
    >
    <button id="search-prev" class="btn btn-outline-light me-1">Prev</button>
    <button id="search-next" class="btn btn-outline-light">Next</button>
  </div>
</div>

<!-- Timeline container -->
<div class="timeline-wrapper">
  <div class="timeline-scroll d-flex overflow-auto py-3 position-relative">
    <!-- JS will inject content here -->
  </div>
</div>

<!-- Results output -->
<div id="results" class="mt-4">
  <p class="text-muted">Select a banner to calculate rolls.</p>
</div>

<!-- Timeline JS -->
<script src="/js/timeline.js"></script>
