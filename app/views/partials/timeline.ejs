<!-- Row containing title and search -->
<div class="d-flex justify-content-between align-items-center banner-search">
  <div class="banner-title-wrapper">
    <h2 class="banner-title">Banner Timeline</h2>
  </div>

  <!-- Search Bar -->
  <div class="input-group search-bar">
    <input
      type="text" 
      id="timeline-search" 
      class="form-control" 
      placeholder="Search character..."
      aria-label="Search character"
    >
    <button id="search-prev" class="btn btn-outline-light" type="button" aria-label="Previous">
      <i class="bi bi-arrow-left"></i>
    </button>
    <button id="search-next" class="btn btn-outline-light" type="button" aria-label="Next">
      <i class="bi bi-arrow-right"></i>
    </button>
  </div>
</div>

<div class="timeline-wrapper">
    <div class="timeline-scroll">
      <!-- Cards injected here -->
    </div>
</div>

<!-- Results output -->
<div class = "results-wrapper">
  <div id="results">
    <p class="text-muted results-text" >Select a banner to calculate rolls.</p>
  </div>
</div>

<!-- Timeline JS -->
<script src="/js/timeline.js"></script>
