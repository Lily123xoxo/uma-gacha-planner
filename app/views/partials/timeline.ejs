<!-- Row containing title and search -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="mb-0">Banner Timeline</h2>

  <!-- Search Bar -->
  <div class="input-group" style="width: 400px;">
    <input 
      type="text" 
      id="timeline-search" 
      class="form-control" 
      placeholder="Search character..."
      aria-label="Search character"
    >
    <button id="search-prev" class="btn btn-outline-light" type="button" aria-label="Previous">
      <i class="bi bi-arrow-left"></i>
    </button>
    <button id="search-next" class="btn btn-outline-light" type="button" aria-label="Next">
      <i class="bi bi-arrow-right"></i>
    </button>
  </div>
</div>

<!-- Timeline container -->
<div class="timeline-wrapper">
  <div class="timeline-scroll d-flex overflow-auto py-3 position-relative">
    <!-- JS will inject content here -->
  </div>
</div>

<!-- Results output -->
<div id="results" class="mt-4">
  <p class="text-muted">Select a banner to calculate rolls.</p>
</div>

<!-- Timeline JS -->
<script src="/js/timeline.js"></script>
