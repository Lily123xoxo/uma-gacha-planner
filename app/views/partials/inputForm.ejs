<!-- Full-width container -->
<div class="container-fluid form-container">
  <!-- Rounded bordered wrapper -->
  <div class="form-wrapper card border-light rounded p-4">
    <form id="planner-form">
      <div class="row g-3">

        <!-- Current Carats -->
        <div class="col-md-4">
          <div class="mb-1">
            <label for="carats" class="form-label">Current Carats:</label>
            <input type="number" min="0" class="form-control text-light border-light" id="carats" name="carats" required>
          </div>
        </div>

        <!-- Club Rank -->
        <div class="col-md-4">
          <div class="mb-1">
            <label for="clubRank" class="form-label">Club Rank:</label>
            <select class="form-select border-light" id="clubRank" name="clubRank" required>
              <option value="" disabled selected>Select a value</option>
              <option value="SS">SS</option>
              <option value="Splus">S+</option>
              <option value="S">S</option>
              <option value="Aplus">A+</option>
              <option value="A">A</option>
              <option value="Bplus">B+</option>
              <option value="B">B</option>
              <option value="Cplus">C+</option>
              <option value="C">C</option>
              <option value="Dplus">D+</option>
            </select>
          </div>
        </div>

        <!-- Champion Meeting -->
        <div class="col-md-4">
          <div class="mb-1">
            <label for="champMeeting" class="form-label">Expected CM Carat Gains:</label>
            <select class="form-select border-light" id="champMeeting" name="champMeeting" required>
              <option value="" disabled selected>Select a value</option>
              <option value="2500">2500</option>
              <option value="1800">1800</option>
              <option value="1200">1200</option>
              <option value="1000">1000</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Checkboxes -->
      <div class="row mt-4 form-booleans">
        <!-- Left Column (first 4 checkboxes) -->
        <div class="col-md-4">
          <div class="form-check">
            <input type="checkbox" name="monthlyPass" id="monthlyPass" class="form-check-input bg-dark border-light">
            <label for="monthlyPass" class="form-check-label">I have the monthly pass</label>
          </div>
          <div class="form-check">
            <input type="checkbox" name="dailyLogin" id="dailyLogin" class="form-check-input bg-dark border-light">
            <label for="dailyLogin" class="form-check-label">I collect daily login rewards</label>
          </div>
          <div class="form-check">
            <input type="checkbox" name="legendRace" id="legendRace" class="form-check-input bg-dark border-light">
            <label for="legendRace" class="form-check-label">I win my legend races</label>
          </div>
          <div class="form-check">
            <input type="checkbox" name="dailyMission" id="dailyMission" class="form-check-input bg-dark border-light">
            <label for="dailyMission" class="form-check-label">I do my daily missions</label>
          </div>
        </div>

        <!-- Right Column (aligned with Club Rank) -->
        <div class="col-md-5">
          <div class="form-check">
            <input type="checkbox" name="rainbowCleat" id="rainbowCleat" class="form-check-input bg-dark border-light">
            <label for="rainbowCleat" class="form-check-label">I buy 4x tickets with Rainbow Cleats monthly</label>
          </div>
          <div class="form-check">
            <input type="checkbox" name="goldCleat" id="goldCleat" class="form-check-input bg-dark border-light">
            <label for="goldCleat" class="form-check-label">I buy 4x tickets with Gold Cleats monthly</label>
          </div>
          <div class="form-check">
            <input type="checkbox" name="silverCleat" id="silverCleat" class="form-check-input bg-dark border-light">
            <label for="silverCleat" class="form-check-label">I buy 4x tickets with Silver Cleats monthly</label>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Result Display -->
<div id="result" class="mt-3"></div>
