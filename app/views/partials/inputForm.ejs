<!-- Full-width section for the form -->
<section class="form-container container-fluid">
  <!-- Form wrapper with border -->
  <form id="planner-form" class="form-wrapper card rounded p-4">
    
    <!-- Group: Main input fields -->
    <fieldset class="row g-4">
      <legend class="visually-hidden">Planner Inputs</legend>

      <!-- Current Carats -->
      <div class="col-md-3">
        <label for="carats" class="form-label">Current Carats:</label>
        <input
          type="number"
          min="0"
          id="carats"
          name="carats"
          required
          class="form-control text-light"
        >
      </div>

      <!-- Club Rank -->
      <div class="col-md-3">
        <label for="clubRank" class="form-label">Club Rank:</label>
        <select
          id="clubRank"
          name="clubRank"
          required
          class="form-select"
        >
          <option value="" disabled selected>Select a value</option>
          <option value="SS">SS</option>
          <option value="Splus">S+</option>
          <option value="S">S</option>
          <option value="Aplus">A+</option>
          <option value="A">A</option>
          <option value="Bplus">B+</option>
          <option value="B">B</option>
          <option value="Cplus">C+</option>
          <option value="C">C</option>
          <option value="Dplus">D+</option>
        </select>
      </div>

      <!-- Team Trials Class -->
      <div class="col-md-3">
        <label for="teamTrialsRank" class="form-label">Team Trials Class:</label>
        <select
          id="teamTrialsRank"
          name="teamTrialsRank"
          required
          class="form-select"
        >
          <option value="" disabled selected>Select a value</option>
          <option value="Class6">Class 6</option>
          <option value="Class5">Class 5</option>
          <option value="Class4">Class 4</option>
          <option value="Class3">Class 3</option>
          <option value="Class2">Class 2</option>
          <option value="Class1">Class 1</option>
        </select>
      </div>

      <!-- Champion Meeting -->
      <div class="col-md-3">
        <label for="champMeeting" class="form-label">Expected CM Carat Gains:</label>
        <select
          id="champMeeting"
          name="champMeeting"
          required
          class="form-select"
        >
          <option value="" disabled selected>Select a value</option>
          <option value="2500">2500</option>
          <option value="1800">1800</option>
          <option value="1200">1200</option>
          <option value="1000">1000</option>
        </select>
      </div>
    </fieldset>

    <!-- Group: Boolean options -->
    <fieldset class="row mt-4 form-booleans">
      <legend class="visually-hidden">Optional bonuses</legend>

      <!-- Monthly/Daily bonuses -->
      <div class="col-md-3">
        <h2 class="h2-form-titles">Bonus Income:</h2>
        <div class="form-check">
          <input
            type="checkbox"
            id="dailyLogin"
            name="dailyLogin"
            class="form-check-input bg-dark"
          >
          <label for="dailyLogin" class="form-check-label">
            Daily login rewards
          </label>
        </div>
        <div class="form-check">
          <input
            type="checkbox"
            id="legendRace"
            name="legendRace"
            class="form-check-input bg-dark"
          >
          <label for="legendRace" class="form-check-label">
            Legend races
          </label>
        </div>
        <div class="form-check">
          <input
            type="checkbox"
            id="dailyMission"
            name="dailyMission"
            class="form-check-input bg-dark"
          >
          <label for="dailyMission" class="form-check-label">
            Daily missions
          </label>
        </div>
      </div>

      <!-- Cleats bonuses -->
      <div class="col-md-6">
        <h2 class="h2-form-titles">Monthly Purchases: </h2>
        <div class="form-check">
          <input
            type="checkbox"
            id="monthlyPass"
            name="monthlyPass"
            class="form-check-input bg-dark"
          >
          <label for="monthlyPass" class="form-check-label">
            Daily Carat Pack
          </label>
        </div>
        <div class="form-check">
          <input
            type="checkbox"
            id="rainbowCleat"
            name="rainbowCleat"
            class="form-check-input bg-dark"
          >
          <label for="rainbowCleat" class="form-check-label">
            Four tickets with Rainbow Cleats
          </label>
        </div>
        <div class="form-check">
          <input
            type="checkbox"
            id="goldCleat"
            name="goldCleat"
            class="form-check-input bg-dark"
          >
          <label for="goldCleat" class="form-check-label">
            Four tickets with Gold Cleats
          </label>
        </div>
        <div class="form-check">
          <input
            type="checkbox"
            id="silverCleat"
            name="silverCleat"
            class="form-check-input bg-dark"
          >
          <label for="silverCleat" class="form-check-label">
            Four tickets with Silver Cleats
          </label>
        </div>
      </div>
    </fieldset>
  </form>
</section>

<!-- Result Display -->
<aside id="result" class="mt-3" aria-live="polite"></aside>
